<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/background_digi"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Logg inn Digipost Testmiljø"
        android:id="@+id/textView2"
        android:textSize="35sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="69dp" />

    <Button
        android:id="@+id/Button01"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:background="@drawable/bbtn3"
        android:gravity="center_vertical|center_horizontal|center"
        android:onClick="onClick"
        android:text="Logg inn i Digipost"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:textSize="22sp"
        android:layout_marginTop="71dp"
        android:layout_below="@+id/password"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="65dp"
        android:inputType="textPassword"
        android:maxLength="24"
        android:hint="Passord"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:background="#FFFFFF"
        android:padding="10dp"
        android:textSize="24dp"
        android:id="@+id/password"
        android:layout_below="@+id/textView2"
        android:layout_alignStart="@+id/Button01"
        android:layout_marginTop="170dp" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="65dp"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:background="#FFFFFF"
        android:padding="10dp"
        android:maxLength="11"
        android:hint="Fødselsnummer"
        android:textSize="25sp"
        android:id="@+id/username"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="90dp"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/password" />

    <TextView
        android:id="@+id/tv"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_alignTop="@+id/Button01"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="84dp" />
</RelativeLayout>
